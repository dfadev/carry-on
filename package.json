{
  "name": "carry-on",
  "private": true,
  "description": "A Store for React",
  "author": "Russ Panula <russ@dfa.net>",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^3.5.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build-store": "cd packages/carry-on-store && npm run build",
    "build-devtools": "cd packages/carry-on-devtools && npm run build",
    "build-notify": "cd packages/carry-on-notify && npm run build",
    "build-transaction": "cd packages/carry-on-transaction && npm run build",
    "build-react": "cd packages/carry-on-react && npm run build",
    "build-react-forms": "cd packages/carry-on-react-forms && npm run build",
    "build1": "run-s build-store",
    "build2": "run-p build-react build-devtools build-notify build-transaction",
    "build3": "run-s build-react-forms",
    "build": "run-s build1 build2 build3",

    "test-store": "cd packages/carry-on-store && npm run test",
    "test-devtools": "cd packages/carry-on-devtools && npm run test",
    "test-notify": "cd packages/carry-on-notify && npm run test",
    "test-transaction": "cd packages/carry-on-transaction && npm run test",
    "test-react": "cd packages/carry-on-react && npm run test",
    "test-react-forms": "cd packages/carry-on-react-forms && npm run test",
    "test1": "run-s test-store",
    "test2": "run-s test-react test-devtools test-notify test-transaction",
    "test3": "run-s test-react-forms",
    "test": "run-s test1 test2 test3",

    "dev": "run-p watch test:watch",
    "watch": "lerna exec --concurrency 6 --no-sort -- \"npm run watch | cat\"",
    "test:watch": "lerna exec --concurrency 6 --no-sort -- \"npm run test:watch | cat\"",
    "test:cov": "lerna exec --concurrency 6 --no-sort -- \"npm run test:cov | cat\"",
    "clean": "lerna exec --concurrency 6 --no-sort -- \"npm run clean | cat\""
  },
  "dependencies": {}
}
